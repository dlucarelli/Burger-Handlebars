<div class="container">
    <div class="burger">
        <img src="../assets/images/burger-icon.png" alt = "Cartoon Burger" class = "icon">
    </div>
    <h1 class="header">Eat! That! Burger!</h1>


    <div class="to-eat">
        <h2>Burgers that are not devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="devoured">
        <h2>Burgers that are devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>


    <form class="create-form add-burger">
        <h5>Submit a new burger</h5>
        <div class="form-group">
            <input type="text" id="bur" name="name">
        </div>

        <button type="submit" class="btn">Submit</button>
    </form>
</div>